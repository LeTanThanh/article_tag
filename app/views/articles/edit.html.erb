<div class="container">
  <h2>
    Edit <%= @article.title %>
  </h2>

  <%= form_for @article, html: {class: "form-horizontal"} do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :tags_name, "Tags", class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :tags_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_area :content, class: "form-control", rows: 5 %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Update Article", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
